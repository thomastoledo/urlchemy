{
  "name": "urlchemy",
  "version": "0.0.4",
  "keywords": [
    "js",
    "javascript",
    "utility",
    "typescript"
  ],
  "description": "A lightweight library for handling query strings, supporting nested objects and arrays.",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "esbuild": "^0.25.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "browser": "dist/urlchemy.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run test && npm run build:cjs && npm run build:esm && npm run bundle-esm && npm run bundle-esm-min",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "bundle-esm-min": "esbuild ./dist/esm/index.js --bundle --format=esm --global-name=Urlchemy --outfile=dist/urlchemy.min.js --minify",
    "bundle-esm": "esbuild ./dist/esm/index.js --bundle --format=esm --global-name=Urlchemy --outfile=dist/urlchemy.js",
    "build:examples": "npm run build && cd examples/node-example && npm install && cd ../web-example && npm install",
    "test": "jest",
    "prepare": "npm run build",
    "pack": "npm pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomastoledo/urlchemy.git"
  },
  "author": "Thomas TOLEDO",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thomastoledo/urlchemy/issues"
  },
  "homepage": "https://github.com/thomastoledo/urlchemy#readme",
  "dependencies": {
    "urlchemy": "^0.0.3"
  }
}